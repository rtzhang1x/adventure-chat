<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
    <title>
        <% if (typeof title !== 'undefined' && title !== null) { %>
            <%= title %> - AdventureChat
        <% } else { %>
            AdventureChat
        <% } %>        
    </title>

    <nav class="navbar navbar-expand-sm bg-light">
        <div class="container">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="navbar-brand" href="/">AdventureChat</a></li>
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <% if (typeof user !== 'undefined' && user !== null) { %> <li class="navbar-text"><%= user %></li> <% } %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <% if (typeof logged_in === 'undefined' || logged_in === null || logged_in === false) { %>
                    <li class="nav-item"><a class="nav-link" href="/auth/register">Register</a></li>
                    <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
                <% } else { %>
                    <li class="nav-item"><a class="nav-link" href="/messages">Messages <span class="badge bg-danger">4</span> </a></li>
                    <li class="nav-item"><a class="nav-link" href="/auth/logout">Logout</a></li>
                <% } %>
            </ul>
        </div>
    </nav>
</head>

<body>
    <div class="container pt-5">
        <% if (typeof messages !== 'undefined' && messages !== null && messages.length > 0) {  
            for (var i = 0; i < messages.length; i++) { %>
                <div class="alert alert-<%= msg_types[i] || "danger"%>"><%= messages[i] %></div>
            <% } 
        }
        %>
